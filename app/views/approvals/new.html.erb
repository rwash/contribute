<div class="form">
  <h2>Submit Project</h2>
  <p>&nbsp;</p>


  <%= form_tag 'submit-add' do %>
    <div class="row well">
      <div class="span1-5">
        <%= label_tag :project_id, "Project: ", :class => 'pull-right bold' %>
      </div>
      <div class="span4">
        <%= select("", "project_id", @projects.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Project'}) %>
      </div>
    </div>

    <div class="row well">
      <div class="span3">
        <%= submit_tag "Submit", :class => 'btn btn-success btn-large pull-right' %>
      </div>
      <p>&nbsp;</p>
    </div>
  <% end %>

</div>
