<div id="header">
  <h1>Michigan State University's crowd funding platform</h1>
  <h2>Contribute to creativity.</h2>
</div>

<% if params[:search] && @projects.count == 0 %>
  <p>
  Sorry, no projects were found that matched your search terms.
  </p>
<% end %>

<div class="projects">
<% @projects.each do |project| %>
  <%= render partial: 'shared/project', locals: {project: project} %>
<% end %>
</div>
